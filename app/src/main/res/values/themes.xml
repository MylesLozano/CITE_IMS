<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Theme -->
    <style name="Theme.CITE_IMS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">#6A0DAD</item> <!-- Royal Purple -->
        <item name="colorPrimaryVariant">#4B0082</item> <!-- Darker Royal Purple -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- White for text/icons on purple -->

        <!-- Secondary Colors -->
        <item name="colorSecondary">#FFD700</item> <!-- Royal Gold -->
        <item name="colorSecondaryVariant">#FFC107</item> <!-- Slightly darker gold -->
        <item name="colorOnSecondary">#FFFFFF</item> <!-- White for text/icons on gold -->

        <!-- Background and Surface -->
        <item name="android:windowBackground">#FFFFFF</item> <!-- White background -->
        <item name="colorSurface">#FFFFFF</item> <!-- White for surfaces -->
        <item name="colorOnSurface">#4B0082</item> <!-- Text on white surface -->

        <!-- Error Colors -->
        <item name="colorError">#B00020</item> <!-- Error red -->
        <item name="colorOnError">#FFFFFF</item> <!-- Text on error color -->

        <!-- Typography -->
        <item name="android:textColorPrimary">#4B0082</item> <!-- Dark Purple for primary text -->
        <item name="android:textColorSecondary">#FFD700</item> <!-- Gold for secondary text -->

        <!-- ActionBar and StatusBar -->
        <item name="android:statusBarColor">#4B0082</item> <!-- Dark Purple -->
        <item name="android:navigationBarColor">#6A0DAD</item> <!-- Royal Purple -->

        <!-- Customization -->
        <item name="android:buttonTint">#FFD700</item> <!-- Gold tint for buttons -->
    </style>

</resources>
